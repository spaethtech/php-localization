{
    "name": "spaethtech/php-localization",
    "description": "A library for localization and translations.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Ryan Spaeth",
            "email": "rspaeth@spaethtech.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-json": "*",
        "stichoza/google-translate-php": "^3.2"
    },
    "require-dev": {
        "phpunit/phpunit": "~9",
        "twig/twig": "~3"
    },
    "autoload": {
        "psr-4": {
            "SpaethTech\\": "./src/spaethtech/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SpaethTech\\": "./tests/spaethtech/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
